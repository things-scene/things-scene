{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/things-scene/things-scene.git"
  },
  "author": "hatiolab.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/things-scene/things-scene/issues"
  },
  "homepage": "https://github.com/things-scene/things-scene#readme",
  "scripts": {
    "publish": "lerna publish",
    "build": "lerna run build",
    "build:server": "lerna run build:server",
    "build:client": "lerna run build:client",
    "lint": "eslint '**/*.{ts,tsx}'",
    "lint:changelogs": "node scripts/lint-changelogs.js",
    "ci:lint-docs": "yarn generate docs && test -z \"$(git status --porcelain)\" || echo 'The root README has not been updated. Run `yarn generate docs` in the root of your things-scene directory and try again.'",
    "_test": "NODE_ICU_DATA=node_modules/full-icu jest",
    "pretest": "yarn build",
    "test": "yarn _test --no-coverage",
    "test:ci": "yarn _test --maxWorkers=3 --coverage",
    "check": "lerna run check",
    "release": "yarn lint:changelogs && lerna publish",
    "release:force": "yarn lint:changelogs && lerna publish --force-publish=*",
    "release-beta": "lerna publish --dist-tag beta",
    "clean": "rimraf './packages/*/dist*'",
    "generate": "plop",
    "generate:package": "plop package && yarn plop docs && prettier --write \"./packages/tsconfig.json\"",
    "tophat": "tophat",
    "docs": "lerna run docs"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.6.2",
    "@babel/core": "^7.8.3",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-decorators": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.8.3",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "@babel/register": "^7.8.3",
    "@types/faker": "^5.1.2",
    "@types/jest": "^26.0.10",
    "@types/lodash": "^4.14.139",
    "@types/node": "^14.6.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.2.1",
    "babel-loader": "^8.0.6",
    "clean-webpack-plugin": "^3.0.0",
    "codecov": "^3.0.2",
    "copy-webpack-plugin": "^6.0.3",
    "cross-fetch": "^3.0.4",
    "css-loader": "^4.2.1",
    "docdash": "^1.2.0",
    "documentation": "^13.0.2",
    "element-closest": "^3.0.1",
    "eslint": "^7.5.0",
    "faker": "^5.1.0",
    "file-loader": "^6.0.0",
    "fs-extra": "^9.0.1",
    "full-icu": "^1.3.0",
    "get-port": "^5.0.0",
    "graphql": "^15.3.0",
    "html-webpack-plugin": "^4.3.0",
    "intl-pluralrules": "^1.2.0",
    "jest": "^26.4.2",
    "jest-transform-graphql": "^2.1.0",
    "lerna": "^3.22.1",
    "plop": "^2.6.0",
    "prettier": "~2.1.2",
    "rimraf": "^3.0.2",
    "saddle-up": "^0.5.1",
    "terser": "^5.1.0",
    "ts-jest": "^26.2.0",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.7.0",
    "tslib": "^2.0.0",
    "typescript": "^4.0.2",
    "url-loader": "^4.0.0",
    "webpack": "^4.41.0",
    "webpack-cleanup-plugin": "^0.5.1",
    "webpack-cli": "^3.3.0",
    "webpack-dev-server": "^3.6.0",
    "webpack-hot-client": "^4.1.1",
    "workbox-webpack-plugin": "^5.1.4"
  }
}
